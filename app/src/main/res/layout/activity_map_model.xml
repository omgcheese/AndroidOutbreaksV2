<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <fragment
        android:id="@+id/map"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="omgcheesecake.outbreak.MapModel"
        android:layout_above="@+id/BottomNoti" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:visibility="gone"
        android:gravity="center"
        android:text="Outbreak Report"
        android:id="@+id/BottomNoti"
        android:drawableLeft="@drawable/ic_settings_24dp"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:drawablePadding="@dimen/setting_icon_padding"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>

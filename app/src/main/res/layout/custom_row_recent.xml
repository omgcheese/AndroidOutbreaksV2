<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="@color/customRowBack">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="virus"
        android:textColor="#0C090A"
        android:background="@color/virusback"
        android:id="@+id/virusText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="country"
        android:layout_marginBottom="10dp"
        android:textStyle="italic"
        android:id="@+id/countryText"
        android:layout_below="@+id/virusText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="date"
        android:id="@+id/dateText"
        android:layout_alignBottom="@+id/countryText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:paddingBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="··························································································"
        android:maxLines="1"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_alignTop="@+id/countryText"
        android:layout_toEndOf="@+id/countryText"
        android:layout_toStartOf="@+id/dateText"/>

    <View
        android:id="@+id/breakLine"
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorTintWhite"
        android:layout_below="@+id/countryText"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

</RelativeLayout>